<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ItemListaMarca_nomeMarca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/ItemListaProduto_title_marcaproduto" />

    <Button
        android:id="@+id/ItemListaMarca_btnExcluir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/botaoExcluir"
        android:textColor="@color/vermelho"
        android:textSize="12sp" />

    <View
        android:id="@+id/ItemListaProduto_divisoriaDois"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ItemListaMarca_btnExcluir"
        android:background="#90909090" />

</RelativeLayout>
